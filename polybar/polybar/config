[colors]
foreground =#d8dee9 
background =#2e3440 
modb =#2e3440 
modb1 =#2e3440 
modb2 =#3b4252 
accent_1 =#a3be8c 
accent_2 =#d08770 
accent_3 =#bf616a 
accent_4 =#b48ead 

[global/wm]
margin-top = 0
margin-bottom = 0
radius = 16.0
override-redirect = true

[bar/top]
width = 100%
height = 23
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Hurmit Nerd Font:size=9:antialias=true;1
;font-1 = MaterialIcons-Regular :size=10:;
font-1 = Powerline:size=9:;

modules-left = ewmh 
modules-center = title
modules-right =  volume cpu date powermenu

tray-position = left
tray-padding = 1
tray-transparent = true
tray-detached = true

spacing = 2
padding-left = 2
padding-right = 2
padding-top = 0
module-margin-left = 2
module-margin-right = 2

[module/volume]
type = internal/volume

format-volume = vol : <ramp-volume><label-volume>

format-volume-background = ${colors.modb}
format-volume-padding = 1

module-margin-right = 1
ramp-volume-0 =vlow  
ramp-volume-1 =low  
ramp-volume-2 =med  
ramp-volume-3 =high 
ramp-volume-foreground = ${colors.accent_1}


label-muted = muted
label-muted-padding = 2
label-muted-foreground = ${colors.accent_1}
label-muted-background = ${colors.accent_3}

[module/date]
type = internal/date
interval = 60
;date = " %a %d // %H:%M"
date = " %A, %Y-%b-%d || %H:%M"
format-prefix = >>
format-prefix-foreground = ${colors.accent_2}
format-background = ${colors.modb1}
format-padding = 1

[module/powermenu]
type = custom/menu

label-open =î¥²
label-open-foreground = ${colors.accent_3}
label-open-background = ${colors.modb}
label-open-padding = 2
label-close =î¦
label-close-padding = 1
label-close-foreground = $[colors.accent_3]
label-separator = |
label-separator-foreground = #666666

menu-0-0 =î¥µ
menu-0-0-exec = menu-open-1
menu-0-1 =î¥²
menu-0-1-exec = menu-open-2
menu-0-2 =î¥
menu-0-2-exec = menu-open-3

menu-1-0 =î¦Ÿ
menu-1-0-exec = menu-open-0
menu-1-1 =î¤Ÿ
menu-1-1-exec = systemctl reboot

menu-2-0 =î¤Ÿ
menu-2-0-exec = systemctl poweroff
menu-2-1 =î¦Ÿ
menu-2-1-exec = menu-open-0

menu-3-0 =î¤Ÿ
menu-3-0-exec = herbstclient quit
menu-3-1 =î¦Ÿ
